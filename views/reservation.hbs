<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">

    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

    <!-- Materialize Link-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <link rel="stylesheet" href="/stylesheets/reservation.css">


    <title>Reservation</title>
  </head>
  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="/home" class="brand-logo">{{user}}</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          {{#if user}}
          <li><a href="/home">Home</a></li>
          <li><a href="/authorize/signout">Sign Out</a></li>
          {{/if}}
        </ul>
      </div>
    </nav>

  <form  action="/home/reservation" method="POST">

    <div class="row">
      <div class="col s2">
        <div class="dropdown">
          <select name="searchRoom[id]">
            <option  disabled selected>Select Room</option>
            {{#each id}}
                <option>{{this}}</option>
            {{/each}}
          </select>
              <label>Materialize Select</label>
        </div>
      </div>

      <div class="col s2">
        <div class="Date">
          <input type="text" name="searchRoom[date]" class="datepicker" placeholder="mm/dd/yyyy">
        </div>
      </div>
      <div class="col s2">
        <div class="submit">
          <button class="btn waves-effect waves-light" type="submit">Check
          <i class="material-icons right">Room</i>
        </button>
        </div>
      </div>
    </div>
  </form>

  <div class="Reservation">
    <table>
     <thead>
       <tr>
         <th>Room</th>
         <th>Not Available</th>
         <th>Start Hour</th>
         <th>End Hour</th>
         <th>Reserve?</th>
       </tr>
     </thead>
     <tbody>
      {{#each id}}
       <tr>
         <td >{{this}}</td>
         <td>
           <ul class="collapsible">
             <li>
               <div class="collapsible-header"><i class="material-icons"></i>Classes</div>
               <div class="collapsible-body"><span>De 9:00am a 11:20am</span></div>
             </li>
           </ul>
         </td>
         <td>
            <input type="text" class="timepicker">
           <!-- {{IniHour}} -->
         </td>
         <td>
           <input type="text" class="timepicker">
           <!-- {{EndHour}} -->
          </td>
         <td>
            <label class="Check">
             <input type="checkbox" />
              <span></span>
            </label>
          </td>
       </tr>
       {{/each}}
    </tbody>
  </table>
</div>

    <!-- === Javascript === -->
    <script type="text/javascript" src="/behavior/Reservation.js"></script>
    <script type="text/javascript" src="/behavior/STUD_APP_HUB_PT2_Beha.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  </body>
</html>
